<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="@dimen/short_margin"
    android:layout_marginRight="@dimen/short_margin"
    android:layout_marginTop="@dimen/short_margin"
    android:background="@drawable/edittext_border">

    <View
        android:id="@+id/view_separation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_separation_vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_separation" />

    <TextView
        android:id="@+id/friend_accept_ima_label"
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:text="Immatriculation :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_separation_vertical" />

    <TextView
        android:id="@+id/friend_accept_ima"
        style="@style/DefautTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:text="AB-123-CD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friend_accept_ima_label" />

    <TextView
        android:id="@+id/friend_accept_phone_label"
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NumÃ©ro :"
        app:layout_constraintStart_toStartOf="@+id/friend_accept_ima_label"
        app:layout_constraintTop_toBottomOf="@+id/view_separation" />

    <TextView
        android:id="@+id/friend_accept_phone"
        style="@style/DefautTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+33 6 14 19 61 82"
        app:layout_constraintStart_toStartOf="@+id/friend_accept_phone_label"
        app:layout_constraintTop_toBottomOf="@+id/friend_accept_phone_label" />

    <TextView
        android:id="@+id/friend_accept_delete_label"
        style="@style/DefautTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/medium_margin"
        android:gravity="center"
        android:text="@string/friend_accept_delete"
        app:layout_constraintBottom_toTopOf="@+id/view_separation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_separation_vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/friend_accept_delete_button"
        style="@style/ButtonTextStyle"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Supprimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/friend_accept_delete_label"
        app:layout_constraintStart_toStartOf="@+id/friend_accept_delete_label"
        app:layout_constraintTop_toBottomOf="@+id/view_separation" />


</androidx.constraintlayout.widget.ConstraintLayout>